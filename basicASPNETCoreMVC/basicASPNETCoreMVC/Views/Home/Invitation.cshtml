
@model basicASPNETCoreMVC.Models.Participant
@{
    Layout = "_Layout";
}



    <form style="width:250px;margin:auto" method="post">
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" class="form-control"placeholder="Enter email"><span asp-validation-for="Email"></span>
            <small id="emailHelp" class="form-text text-muted">I'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"placeholder="Name"> <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group form-check">
            <input type="radio" name="checkPart" value="participate">
            <label class="form-check-label">I'll participate.</label>
            <div>
                <input type="radio" name="checkPart" value="notparticipate">
                <label class="form-check-label">I wont participate.</label>
            </div>
            
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

   










   

